<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/menu_footer_padding"
        android:paddingLeft="@dimen/menu_item_margin"
        android:paddingRight="@dimen/menu_item_margin"
        android:paddingTop="@dimen/menu_footer_padding">

        <android.support.v7.widget.CardView
            android:id="@+id/card_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_item_height"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/menu_footer_text"
                android:text="Back" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_switch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_item_height"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/menu_footer_text"
                android:text="Switch \nDep./Dest." />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_item_height"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/menu_footer_text"
                android:text="Search" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>